
@model IEnumerable<NeoDataLayer.DomainModel.Auction>

@{
    ViewBag.Title = "Auctions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Active auctions:</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div style="display:flex;flex-direction:row">
        @Html.Label("Enter type of auction", new { htmlAttributes = new { @class = "form-control" } })
        <div class="form-group">
            @Html.Editor("type", new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Find by type" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name of auction")
        </th>
        <th>
            @Html.DisplayName("Category/Type")
        </th>
        <th>
            @Html.DisplayName("Auction starts from")
        </th>
        <th>
            @Html.DisplayName("Auction ends")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datePublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duration)
            </td>
            <td>
                @Html.ActionLink("See subjects", "SeeSubjects", "Auction", new { title = item.title }, null)
            </td>
        </tr>
    }
</table>





